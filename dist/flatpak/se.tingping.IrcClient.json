{
  "app-id": "se.tingping.IrcClient",
  "runtime": "org.gnome.Platform",
  "runtime-version": "3.24",
  "sdk": "org.gnome.Sdk",
  "command": "irc-client",
  "finish-args": [
      "--share=ipc",
      "--socket=x11",
      "--socket=wayland",
      "--share=network",

      "--talk-name=org.gtk.vfs",
      "--talk-name=org.gtk.vfs.*",
      "--talk-name=org.gnome.SettingsDaemon",
      "--talk-name=org.freedesktop.Notifications",

      "--env=DCONF_USER_CONFIG_DIR=.config/dconf",
      "--filesystem=xdg-run/dconf",
      "--filesystem=~/.config/dconf:ro",
      "--talk-name=ca.desrt.dconf",

      "--env=SSL_CERT_FILE=/etc/ssl/certs/ca-certificates.crt"
  ],
  "cleanup": [ "/include", "/lib/pkgconfig", "*.la", "/share/gir-1.0", "/share/vala", "/share/gtk-doc" ],
  "modules": [
    {
      "name": "irc-client",
      "buildsystem": "meson",
      "builddir": true,

      "config-opts": [ "--libdir=lib" ],
      "sources": [{
        "type": "git",
        "url": "https://github.com/TingPing/irc-client.git"
      }],
      "modules": [
        {
          "name": "gtksourceview",
          "cleanup": [ "/share" ],
          "sources": [{
            "type": "archive",
            "url": "https://download.gnome.org/sources/gtksourceview/3.24/gtksourceview-3.24.3.tar.xz",
            "sha256": "3eed05486a6420c3e2fdda0bbb19a0d905ed09ebf442302a026ab7e574204cbd"
          }]
        },
        {
          "name": "libpeas",
          "config-opts": [ "--disable-gtk-doc", "--disable-gtk-doc-html", "--disable-python2" ],
          "cleanup": [ "/bin", "/lib/peas-demo" ],
          "sources": [{
            "type": "archive",
            "url": "https://download.gnome.org/sources/libpeas/1.20/libpeas-1.20.0.tar.xz",
            "sha256": "f392fffe2dc00072a51bb2a1b274224a06bdc5f9c3b3c0ac4816909e9933d354"
          }]
        },
        {
          "name": "gspell",
          "config-opts": [ "--disable-vala", "--disable-introspection",
                           "--disable-gtk-doc", "--disable-gtk-doc-html" ],
          "sources": [{
            "type": "archive",
            "url": "https://download.gnome.org/sources/gspell/1.4/gspell-1.4.1.tar.xz",
            "sha256": "442f88fecd7f9e00a6a9d0af2d762744dd3c119217ff11d6739500f75b0f10be"
          }]
        },
        {
          "name": "gssdp",
          "config-opts": ["--disable-vala", "--disable-introspection", "--disable-static"],
          "cleanup": ["/bin"],
          "sources": [{
            "type": "archive",
            "url": "https://download.gnome.org/sources/gssdp/1.0/gssdp-1.0.2.tar.xz",
            "sha256": "a1e17c09c7e1a185b0bd84fd6ff3794045a3cd729b707c23e422ff66471535dc"
          }]
        },
        {
          "name": "gupnp",
          "config-opts": ["--disable-vala", "--disable-introspection", "--disable-static"],
          "cleanup": ["/bin"],
          "sources": [{
            "type": "archive",
            "url": "https://download.gnome.org/sources/gupnp/1.0/gupnp-1.0.2.tar.xz",
            "sha256": "5173fda779111c6b01cd4a5e41b594322be9d04f8c74d3361f0a0c2069c77610"
          }]
        },
        {
          "name": "gssdp-igd",
          "config-opts": ["--disable-vala", "--disable-introspection", "--disable-static"],
          "sources": [{
            "type": "archive",
            "url": "https://download.gnome.org/sources/gupnp-igd/0.2/gupnp-igd-0.2.4.tar.xz",
            "sha256": "38c4a6d7718d17eac17df95a3a8c337677eda77e58978129ad3182d769c38e44"
          }]
        },
        {
          "name": "luajit",
          "no-autogen": true,
          "cleanup": [ "/bin", "/lib/*.a", "/include" ],
          "sources": [
            {
              "type": "archive",
              "url": "http://luajit.org/download/LuaJIT-2.0.5.tar.gz",
              "sha256": "874b1f8297c697821f561f9b73b57ffd419ed8f4278c82e05b48806d30c1e979"
            },
            {
              "type": "shell",
              "commands": [ "sed -i 's|/usr/local|/app|' ./Makefile" ]
            }
          ]
        },
        {
          "name": "lgi",
          "no-autogen": true,
          "build-options": {
            "cflags": "-O2",
            "env": {
              "LUA_CFLAGS": "-I/app/include/luajit-2.0"
            }
          },
          "sources": [
            {
              "type": "git",
              "url": "https://github.com/pavouk/lgi.git",
              "commit": "93eab44ce1e9dcad388546b765c020dec880df3f"
            },
            {
              "type": "shell",
              "commands": [ "sed -i 's|/usr/local|/app|' ./lgi/Makefile" ]
            }
          ]
        }
      ]
    }
  ]
}
